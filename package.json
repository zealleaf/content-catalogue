{
  "name": "leafvein-catalogue-monorepo",
  "version": "1.0.0",
  "private": false,
  "description": "a component about catalogue",
  "files": [
    "lib"
  ],
  "main": "lib/index.umd.js",
  "module": "lib/index.es.js",
  "scripts": {
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint --fix --ext .js,.jsx,.ts,.tsx --quiet ./",
    "push": "pnpm exec esno scripts/push.ts"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec esno scripts/commitMsg.ts $1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "**/**.{js,jsx,ts,tsx,json}": [
      "pnpm run lint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zealleaf/leafvein-catalogue.git"
  },
  "keywords": [
    "component",
    "catalogue"
  ],
  "author": "zealleaf",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zealleaf/leafvein-catalogue/issues"
  },
  "homepage": "https://github.com/zealleaf/leafvein-catalogue#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-define-config": "^1.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "esno": "^0.16.3",
    "happy-dom": "^5.0.0",
    "lint-staged": "^13.0.0",
    "picocolors": "^1.0.0",
    "prettier": "^2.6.2",
    "shelljs": "^0.8.5",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.3",
    "vitest": "^0.13.1"
  }
}
